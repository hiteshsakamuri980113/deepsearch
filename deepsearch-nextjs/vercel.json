{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "NEXT_PUBLIC_SPOTIFY_CLIENT_ID": "@spotify_client_id",
